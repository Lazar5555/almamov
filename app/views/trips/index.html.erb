<!DOCTYPE html>
<html>
    <head>
        <title></title>
    </head>
    <body>
        <div >
            <p id="notice"><%= notice %></p>

            <h1>Trips</h1>

            <table>
              <thead>
                <tr>
                  <th class="short">Genere</th>
                  <th class="short">Age</th>
                  <th class="large">Start trip</th>
                  <th class="large">End trip</th>
                  <th class="short">Origin</th>
                  <th class="short">Destination</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @trips.each do |trip| %>
                  <tr class="all">
                    <td ><%= trip.genere %></td>
                    <td ><%= trip.age %></td>
                    <td ><%= trip.start_trip %></td>
                    <td ><%= trip.end_trip %></td>
                    <td ><%= trip.origin_id %></td>
                    <td ><%= trip.destination_id %></td>
                    <td >
                        <a> <%= link_to 'Show', trip %> </a>    
                        <%= link_to 'Edit', edit_trip_path(trip) %>
                        <%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <div class="import">
                <h4>Import a file</h4>
                    <%= form_tag import_trips_path, multipart: true do %> 
                    <%= file_field_tag :file %>
                    <%= submit_tag "Import CSV" %>
                <%end%>
            </div> 

            <br>

            <%= link_to 'New Trip', new_trip_path %>
        </div>
    </body>
</html>
