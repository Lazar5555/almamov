                    <%= form.label :age %>
                    <%= form.number_field :age, id: :trip_age %>
                  </div>

                  <div class="field">
                  <br />
                    <%= form.label :start_trip %>
                    <%= form.datetime_select :start_trip, id: :trip_start_trip %>
                  </div>

                  <div class="field">
                  <br />
                    <%= form.label :end_trip %>
                    <%= form.datetime_select :end_trip, id: :trip_end_trip %>
                  </div>

                  <div class="field">
                  <br />
                    <%= form.label :origin_id %>
                    <%= form.number_field :origin_id, id: :trip_origin_id %>
                  </div>

                  <div class="field">
                  <br />
                    <%= form.label :destination_id %>
                    <%= form.number_field :destination_id, id: :trip_destination_id %>
                  </div>

                  <div class="actions">
                    <%= form.submit "update", class:"botton" %>
                  </div>
              </div>
            <% end %>
        </div>
