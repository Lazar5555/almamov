<!DOCTYPE html>
<html>
    <head>
        <title></title>
    </head>
    <body>
        <div class="signup" style="text-align: center; width:100%; margin: 100px 5px; font-size: 18px; height: 200px;">
            <h2 class="t_login" >Sign up</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="field">
                <br />
                <%= f.label :email, class:"attribute" %><br />
                <%= f.email_field :email, class:"text_edit", autofocus: true %>
              </div>

              <div class="field">
                <br />
                <%= f.label :password, class:"attribute" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, class:"text_edit", autocomplete: "off" %>
              </div>

              <div class="field">
                <br />
                <%= f.label :password_confirmation, class:"attribute" %><br />
                <%= f.password_field :password_confirmation, class:"text_edit", autocomplete: "off" %>
              </div>

              <div class="field">
                <br />
                <%= f.label :name, class:"attribute" %>
                <%= f.text_field :name, class:"text_edit", autofocus: true %>
              </div>
            
            <div class="field">
                <%= f.label :permission_leve, class:"attribute" %>
                <%= f.text_field :permission_level, class:"text_edit", autofocus: true %>
            </div>    


              <div class="actions">
                <br />
                <%= f.submit "Sign up", class:"botton" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </body>
</html>
