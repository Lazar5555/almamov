<!DOCTYPE html>
<html>
    <head>
        <title>
            
        </title>
    </head>
    <body>
        <div style="text-align: center">
            <h2>Resend unlock instructions</h2>
            <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :email, class:"attribute" %><br />
                <%= f.email_field :email, class:"text_edit", autofocus: true %>
              </div>

              <div class="actions">
                <%= f.submit "Resend unlock instructions", class:"botton" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </body>
</html>
	